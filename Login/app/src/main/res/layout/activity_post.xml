<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listScrollView"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Review about course:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_post_img"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/img" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_post_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jiani Jiang"
                        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title.Media" />

                    <TextView
                        android:id="@+id/tv_post_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="This article was edited at 2018-2-25"
                        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Time" />
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_post_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This document aims to discuss the process for developing application for the UniFriend application. First step was to develop paper prototype for the UniFriend application with the needed functionalities that were proposed in the proposal. The second step was developing a GUI mockup that was based on the paper prototypes and conduct test to get user experience feedback."
                android:textAppearance="@style/TextAppearance.AppCompat.Small"

                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_activity_post_tip_keywords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title.Media"
                    android:text="Key words: "/>
                <TextView
                    android:id="@+id/tv_activity_post_select_keywords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer Sciences"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/im_post_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/accent"
                    app:srcCompat="@drawable/thumbup" />


                <ImageButton
                    android:id="@+id/im_post_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/accent"
                    app:srcCompat="@drawable/thumbdown" />


                <ImageButton
                    android:id="@+id/im_post_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/accent"
                    app:srcCompat="@drawable/ic_menu_share"
                    tools:ignore="VectorDrawableCompat" />


                <ImageButton
                    android:id="@+id/ib_post_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/accent"
                    app:srcCompat="@drawable/message"
                    tools:ignore="UnknownId" />


                <ImageButton
                    android:id="@+id/ib_post_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/accent"
                    app:srcCompat="@drawable/flag" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_activity_post_like_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="25"/>

                <TextView
                    android:id="@+id/tv_activity_post_dislike_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:text="1"/>
                <TextView
                    android:id="@+id/tv_activity_post_share_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:id="@+id/tv_activity_post_comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="35dp"
                    />
                <TextView
                    android:id="@+id/tv_activity_post_report_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="35dp"
                    />

            </LinearLayout>


        </LinearLayout>


        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  Comments:"
                android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title.Media" />

            <EditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Add your comment here:"
                android:maxLines="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tv_activity_post_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="290dp"

                android:text="Submit" />


            <com.example.listscrollview.ListScrollView
                android:id="@+id/lv_post_listview"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </com.example.listscrollview.ListScrollView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

